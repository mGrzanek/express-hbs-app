<div>
  <h2>Contact me</h2>
  {{#if isSent}}
  <div class="isSent">
    <div>The message has been sent!</div> 
    <div>Filename {{ filename }} has been saved!</div>
    <div class="uploadedPicture">
      <img src="{{ picturePath }}" alt="uploadedPicture">
    </div>
    </div>
  {{/if}}
  {{#if isError}}
  <div class="isError">You can not leave fields empty!</div>
  {{/if}}
  <form action="/contact/send-message" method="POST" enctype="multipart/form-data">
    <label>
      Your name: <input type="text" name="author">
    </label>
    <label>
      Your email: <input type="email" name="sender">
    </label>
    <label>
      Title: <input type="text" name="title">
    </label>
    <label>
      Project design: <input type="file" name="picture" accept=".png, .jpg, .jpeg, .gif">
    </label>
    <label>
      Message: <textarea name="message"></textarea>
    </label>
    <button type="submit">Send message</button>
  </form>
</div>